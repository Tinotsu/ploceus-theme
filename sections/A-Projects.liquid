<div class="A-Projects">
  <div class="a-inline">
    <h2 class="a-h2">Nos meilleurs projets</h2>
    <h4 class="a-h4"></h4>
  </div>
  <div class="a-inline">
    <h3 class="a-h4"></h3>
    <h3 class="a-h4"></h3>
  </div>
  <div class="a-inline">
    <h3 class="a-h4"></h3>
    <h3 class="a-h4"></h3>
  </div>
  <div class="a-carousel-container">
    <div class="a-carousel">
      <!-- Slide 1 -->
      <div class="slide" onclick="expand(this, 0)">slide 1</div>
      <!-- Slide 2 -->
      <div class="slide" onclick="expand(this, 1)">slide 2</div>
      <!-- Slide 3 -->
      <div class="slide" onclick="expand(this, 2)">slide 3</div>
    </div>
  </div>
</div>
<script>
  const slides = document.querySelectorAll('.slide');

  const expand = (slide, i) => {
    slides.forEach((it, ind) => {
      if (i === ind) return;
      it.clicked = false;
    });
    gsap.to(slides, {
      width: slide.clicked ? '15vw' : '8vw',
      duration: 1,
    });

    slide.clicked = !slide.clicked;
    gsap.to(slide, {
      width: slide.clicked ? '42vw' : '15vw',
      duration: 1,
    });
  };

  slides.forEach((slide, i) => {
    slide.clicked = false;
    slide.addEventListener('click', () => expand(slide, i));
  });
</script>
